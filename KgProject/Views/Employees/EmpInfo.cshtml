@model List<KgProject.Models.Domain.Employee>
@using Microsoft.AspNetCore.Http;
@{
    int? id = Context.Session.GetInt32("id");

}


<h1>Personal Information</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Salary</th>
            <th>Date Of Birth</th>
            <th>Department</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)

        {
            @if (employee.Id== id)
            {
                <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Email</td>
                <td>@employee.Salary</td>
                <td>@employee.DateOfBirth.ToString("dd-MM-yyyy")</td>
                <td>@employee.Department</td>
                
            </tr>
            }
            
        }
    </tbody>
</table>
